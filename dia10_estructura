        "def mostrar_tareas(tareas):\n",
        "  if len(tareas) == 0:\n",
        "    print(\"No hay tareas para mostrar\")\n",
        "  else:\n",
        "    print(\"\\nLista de tareas:\")\n",
        "    for i, tarea in enumerate(tareas, start=1):\n",
        "      print(i, \"-\", tarea[\"titulo\"], \"| Estado:\", tarea[\"estado\"])"
      ],
